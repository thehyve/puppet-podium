spring:
    datasource:
        url: <%= @gateway_db_url %>
        username: <%= @gateway_db_user %>
        password: <%= @gateway_db_password %>
---
podium:
    mail:
        from: <%= @reply_address %>
        base-url: <%= @app_url %>
    registry:
        password: <%= @registry_password %>
    access:
        request-template: # Configure Basic Authentication for the /api/public/requests/template endpoint.
<% @request_template_tokens.each do |token| -%>
            - <%= token %>
<% end -%>

